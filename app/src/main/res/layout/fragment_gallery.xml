<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <ImageButton
        android:id="@+id/imageButtonEscola"
        android:contentDescription="Botão Escola"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitStart"
        android:src="@drawable/escola"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonAluno"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonTurma"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTripulante"
        app:layout_constraintVertical_bias="0.4" />

    <ImageButton
        android:id="@+id/imageButtonResponsavel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Botão Responsavel"
        android:scaleType="fitStart"
        android:src="@drawable/responsaveis"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonTurma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toEndOf="@+id/imageButtonTripulante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <ImageButton
        android:id="@+id/imageButtonTripulante"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:contentDescription="Botão Tripulante"
        android:scaleType="fitStart"
        android:src="@drawable/tripulante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />

    <ImageButton
        android:id="@+id/imageButtonTurma"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="300dp"
        android:contentDescription="Botão Turma"
        android:scaleType="fitStart"
        android:src="@drawable/turma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonAluno"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Botão Aluno"
        android:scaleType="fitStart"
        android:src="@drawable/aluno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />

</androidx.constraintlayout.widget.ConstraintLayout>